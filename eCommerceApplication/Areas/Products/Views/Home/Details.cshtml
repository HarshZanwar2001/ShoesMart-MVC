@using eCommerceApplication.Models;
@model Product

@{
    ViewBag.Title = "Product Details!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container"> 
    <div class="card mt-4"> 
        <div class="card-header">
            <h2 class="card-header">@Model.ProductName</h2> 
            </div> <div class="card-body">
                <div class="row"> 
                    <div class="col-md-4">
                        <img src="@Url.Content(Model.Picture)" class="img-fluid" alt="@Model.ProductName" /> 
                        </div> <div class="col-md-8"> <h3>Price: $@Model.UnitPrice</h3> 
                            <p>@Model.Description</p> 
                        </div> 
                      </div> 
                   </div> 
                </div> 
           </div>


