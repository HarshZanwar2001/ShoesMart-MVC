@using eCommerceApplication.Models
@model List<MyCartVm>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Your Cart Items!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Cart Items!</h1> @if (Model.Count <= 0)
{
     <h1>Your Cart is Empty!</h1>
}
else
{
     <div class="container mt-4"> <div class="row"> @foreach (var cartVm in Model)
            {
                <div class="col-md-4 mb-3"> 
                    <div class="card"> 
                     
                        <div class="card-body"> <h3 class="card-title">@cartVm.ProductName</h3> 
                            <p class="card-text">Quantity :@cartVm.Quantity</p>
                            <p class="card-text">Size : @cartVm.Size</p>
                            <p class="card-text"><strong>Price:</strong> $@cartVm.UnitPrice</p>|<p class="card-text"><strong>Discount Price:</strong> $@cartVm.DiscountedAmount</p>
                            <button class="btn btn-primary">Payment</button>
                        </div> 
                        </div>
                        </div>
            } </div> </div>
}